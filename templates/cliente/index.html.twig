{% extends 'base.html.twig' %}

{% block title %}Listado de Clientes{% endblock %}

{% block body %}
    <h1>Listado de Clientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Rut</th>
                <th>Nombres</th>
                <th>Apellido Paterno</th>
                <th>Apellido Materno</th>
                <th>Email</th>
                <th>Tel√©fono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.id }}</td>
                <td>{{ cliente.rut }}</td>
                <td>{{ cliente.nombre }}</td>
                <td>{{ cliente.aPaterno }}</td>
                <td>{{ cliente.aMaterno }}</td>
                <td>{{ cliente.email }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>
                    <a class="btn btn-secondary" href="{{ path('cliente_show', {'id': cliente.id}) }}">Mostrar</a>
                    <a class="btn btn-primary" href="{{ path('cliente_edit', {'id': cliente.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('cliente_new') }}">Agregar Cliente</a>
{% endblock %}
